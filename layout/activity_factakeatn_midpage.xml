<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/okk"
    android:background="@drawable/bgcolor"
    tools:context=".factakeatn_midpage">


    <LinearLayout
        android:background="@drawable/backgroundcorners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">


        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Date and Class"
            android:textStyle="bold"
            android:fontFamily="@font/aclonica"
            android:textColor="#000000"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

        <Spinner
            android:id="@+id/spinnerselsub"
            android:background="@drawable/loginapagespinner"
            android:fontFamily="@font/aclonica"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            />

        <TextView
            android:drawableRight="@drawable/calender_black_icon"
            android:drawablePadding="5dp"
            android:id="@+id/date_et"
            android:fontFamily="@font/aclonica"
            android:textColor="#000000"
            android:background="@drawable/inputs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:hint="Select Date"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <Spinner
            android:id="@+id/spinnerattenvalue"
            android:background="@drawable/loginapagespinner"
            android:fontFamily="@font/aclonica"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />

        <Button
            android:id="@+id/takeatenmid_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click to Proceed"
            android:fontFamily="@font/aclonica"
            android:textColor="#000000"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/loginapagespinner"

            />



    </LinearLayout>



</LinearLayout>